<style lang="less">
  #cardD {
    width: 100%;
    height: auto;
    background-color: rgb(239, 241, 245);
    .container-content {
      max-width: 1184px;
      margin: 0 auto;
      .container-content-bigtitle {
        padding: 80px 0px 32px;
        font-size: 40px;
        font-weight: 700;
        line-height: 48px;
        color: rgb(0, 0, 0);
        text-align: center;
      }
      .container-content-smalltitle {
        padding-bottom: 16px;
        border-radius: 8px;
        > div {
          background-image: url(https://promotion-static.tuyacn.com/static/429477586918428672.png);
          background-position: center;
          background-repeat: no-repeat;
          background-size: cover;
          height: 120px;
          display: flex;
          align-items: center;
          > div {
            font-size: 24px;
            font-weight: 800;
            line-height: 24px;
            color: rgb(255, 255, 255);
            padding-left: 20px;
          }
        }
      }
      .container-content-cardlist {
        display: grid;
        gap: 12px;
        justify-items: center;
        grid-template: repeat(1, auto) / repeat(4, 1fr);
        padding-bottom: 20px;
        @media (max-width: 767px) {
          grid-template: repeat(2, auto) / repeat(2, 1fr);
        }
        > div {
          position: relative;
          cursor: pointer;
          border-radius: 10px;
          width: 100%;
          overflow: hidden;
          background-color: #fff;
          box-shadow: rgba(175, 179, 186, 0.61) 1px 1px 6px 0px;
          img {
            aspect-ratio: auto;
            object-fit: contain;
          }

          .container-content-cardlist-text {
            padding: 16px 32px 32px;
            div:nth-of-type(1) {
              font-size: 16px;
              font-weight: 800;
              line-height: 24px;
              color: rgb(0, 0, 0);
              text-align: center;
            }
            div:nth-of-type(2) {
              font-size: 14px;
              font-weight: 400;
              line-height: 20px;
              color: rgb(74, 74, 74);
              text-align: center;
              margin: 8px 0px 16px;
              -webkit-line-clamp: 4;
            }
          }
          .container-content-cardlist-index {
            position: absolute;
            top: 0;
            left: 0;
            padding: 8px 12px;
            background-image: linear-gradient(
              rgb(255, 126, 0),
              rgb(255, 72, 0)
            );
            border-top-left-radius: 8px;
            border-top-right-radius: 0px;
            border-bottom-right-radius: 8px;
            border-bottom-left-radius: 0px;
          }
        }
      }
    }
  }
</style>

